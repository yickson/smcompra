<script type="text/javascript">
$(".guardar").click(function(){
  var nombre = $("#nombre").val();
  var correo = $("#correo").val();
  var nivel = $("#nivel").val();
  var clave = $("#clave").val();
  $.ajax({
    type: "POST",
    cache: false,
    url: "../crear_usuario",
    data: {"nombre":nombre, "correo":correo, "nivel":nivel, "clave":clave },
    success: function(result){
      if(result == 1){
        console.log("usuario creado");
        swal({
           title: "Usuario creado correctamente!",
           text: "En breves momentos serÃ¡s redireccionado",
           type: "success",
           timer: 2500,
           onOpen: () => {
             swal.showLoading()
           }
         }).then((result) => {
           if (result.dismiss === 'timer') {
             window.location.href = "https://localhost/smcompra/administrador/administrador/";
           }
         });
      }else{
        console.log("error"); //Colocar el sweet alert
        swal(
              'Error al crear',
              'No se pudieron crear los datos del usuario, vuelva a intentar',
              'error'
            );
      }
    }
  })
});
</script>
